<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bike"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.impactalert.main.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.impactalert.main.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="com.impactalert.ontheroad.OnTheRoadActivity"
            android:label="@string/title_activity_on_the_road" >
        </activity>
        <activity
            android:name="com.impactalert.main.ConfigurationActivity"
            android:label="@string/title_activity_configuration" >
        </activity>
        <activity
            android:name="com.impactalert.main.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.impactalert.main.LegalNoteActivity"
            android:label="@string/title_activity_legal_note" >
        </activity>
        <activity
            android:name="com.impactalert.settings.FirstRunActivity"
            android:label="@string/title_activity_first_run" >
        </activity>
        <activity
            android:name="com.impactalert.settings.ContactListActivity"
            android:label="@string/title_activity_contact_list" >
        </activity>
        <activity
            android:name="com.impactalert.settings.MessageConfigActivity"
            android:label="@string/title_activity_message_config" >
        </activity>
        <activity
            android:name="com.impactalert.settings.MainConfigurationActivity"
            android:label="@string/title_activity_main_configuration" >
        </activity>
    </application>

</manifest>
